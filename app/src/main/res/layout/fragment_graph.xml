<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="umich.jakebock.trackme.fragments.GraphFragment">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/start_and_end_date_layout"
        android:layout_margin="20dp" />

    <RelativeLayout
        android:id="@+id/start_and_end_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/start_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/to_text_view"
            android:layout_toStartOf="@+id/to_text_view"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/to_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:text="@string/to" />

        <TextView
            android:id="@+id/end_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/to_text_view"
            android:layout_toEndOf="@+id/to_text_view"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" />
    </RelativeLayout>

</RelativeLayout>
